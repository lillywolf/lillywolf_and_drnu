package helpers{	import flash.events.EventDispatcher;	import flash.events.MouseEvent;		public class PlayerButtonGroup extends EventDispatcher	{		public static var _group_obj:Object = {};		public var _groupName:String;		public var items_array:Array;		public var _selectedIndex:Number;		public function PlayerButtonGroup(groupName:String)		{			if (groupName)			{								_groupName = groupName;				_group_obj[_groupName] = this;				_selectedIndex = -1;				items_array = [];			}					}		public function set groupName(val:String):void		{			_groupName = val;		}		public function get groupName():String		{			return _groupName;		}		static public function getGroup(groupName:String):PlayerButtonGroup		{			return _group_obj[groupName];		}		public function addItem(itemSimpleButton:PlayerButton):void 		{			// removeItem(itemSimpleButton);						items_array.push(itemSimpleButton);			trace("push a button");						var target:PlayerButtonGroup = this;			itemSimpleButton.selectable = true;			itemSimpleButton.addEventListener(MouseEvent.MOUSE_DOWN, function (event_obj:MouseEvent) 			{				var index = (event_obj.currentTarget as PlayerButton).index;				if (target.selectedIndex != index)				{					target.selectedIndex = index;					trace("change index to " + target.selectedIndex.toString());					// target.dispatchEvent("change");				}			});					}		public function removeItem(itemSimpleButton:PlayerButton):void 		{			for (var i = 0; i < items_array.length; i++) 			{				var item = items_array[i];				if (item == itemSimpleButton) 				{					items_array.splice(i, 1);					i--;				}			}		}		public function get items():Array 		{			return items_array;		}		public function getItemIndex(item:Object):int		{			return items.indexOf(item);		}		public function set selectedIndex(value:int):void 		{			_selectedIndex = value;			for (var i = 0; i < items.length; i++) 			{				var item = items[i];				if (i == _selectedIndex)				{					trace("is selected");					item.selected = true;				}				else				{					if (item.selected == true)					{						item.selected = false;								}				}			}		} 		public function get selectedIndex():int 		{			return _selectedIndex;		}			}}